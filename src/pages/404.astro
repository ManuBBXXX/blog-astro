---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page not found">
  <div class="flex flex-col items-center justify-center h-screen gap-8">
    <Image src={error} alt="404" height={250} class="mt-10" />
    <h1 class="text-5xl font-bold">404 - Page not found</h1>
    <p class="text-2xl mb-10">
      Sorry, the page you are looking for does not exist.
    </p>
    <a href="/" class="text-2xl hover:bg-indigo-500 p-2 border-2 rounded-xl"
      >Return to the home page</a
    >
  </div>
</MainLayout>
